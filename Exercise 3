//Ler um número inteiro n.Decidir se n é um número primo e apresente o
//resultado.

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <conio.h>
#include <ctype.h>
#include <stdbool.h>

int n;

int main() {

	while (n >= 0) {

		printf("\nDigite valor de N: ");
		scanf_s("%i", &n);

		if (n % 2 == 1)
		{
			printf("\nNUMERO IMPAR\n");


		}
		else {
			printf("\nNUMERO PAR\n");
		}

	
	}


}
